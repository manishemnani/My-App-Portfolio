<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myportfolioapp.MainActivity"
    android:background="@color/colorGreyHomeBkg"
    >

    <TextView
        android:id="@+id/MyPortfolioText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/popularMovies"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:layout_below="@id/MyPortfolioText"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"/>

    <Button
        android:id="@+id/stockHawk"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:layout_below="@id/popularMovies"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buildItBigger"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:layout_below="@id/stockHawk"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/makeYourAppMaterial"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="MAKE YOUR APP MATERIAL"
        android:layout_below="@id/buildItBigger"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/goUbiquitous"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:layout_below="@id/makeYourAppMaterial"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/capstone"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:layout_below="@id/goUbiquitous"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButtonBkg"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
